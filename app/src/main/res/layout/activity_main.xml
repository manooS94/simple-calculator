<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#909BDA"
    android:focusableInTouchMode="false"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btResult"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse"
        android:layout_width="66dp"
        android:layout_height="47dp"
        android:layout_marginBottom="68dp"
        android:text="="
        android:textAllCaps="false"
        android:textColor="@color/material_dynamic_neutral95"
        android:textSize="24sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_action_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/design_default_color_error"

        />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="81dp"
        android:layout_height="34dp"
        android:layout_marginBottom="60dp"
        android:text="Result"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ednum1"
        android:layout_width="132dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/ednum2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ednum2"
        android:layout_width="132dp"
        android:layout_height="55dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Calculator"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spSelect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545" />

    <Spinner
        android:id="@+id/spSelect"
        android:layout_width="87dp"
        android:layout_height="47dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/spin_style"
        android:popupBackground="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/ednum1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>